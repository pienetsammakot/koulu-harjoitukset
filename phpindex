  &lt?php
  $R1 = 10;
  $R2 = 10;
  $R3 = 10;
  $Rkok = 1 / ((1 / $R1) + (1 / $R2) + (1 / $R3));
	
  echo "1 / (1 /" . $R1 . " +  1  / " . $R2 . " + 1 / " . $R3 . ")&ltbr>";
  $Rkok = number_format($Rkok, 2,',',' ');
  echo  "= " . $Rkok . "Ω";
  ?>
  &lt/div>

	  </pre></div>
